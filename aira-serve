#!/bin/bash

# Aira Server Launch Script
# Starts both the backend API server and frontend development server

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Base directory
BASE_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo -e "${BLUE}ğŸŒ¸ Starting Aira${NC}"
echo "================="
echo ""

# Check if backend exists
if [ ! -f "$BASE_DIR/aira/target/release/aira_server" ]; then
    echo -e "${RED}âŒ Backend not built. Please run ./install.sh first${NC}"
    exit 1
fi

# Function to cleanup processes on exit
cleanup() {
    echo ""
    echo -e "${YELLOW}ğŸ›‘ Shutting down Aira...${NC}"
    if [ -n "$BACKEND_PID" ]; then
        kill $BACKEND_PID 2>/dev/null || true
    fi
    if [ -n "$FRONTEND_PID" ]; then
        kill $FRONTEND_PID 2>/dev/null || true
    fi
    echo -e "${GREEN}âœ“ Aira stopped${NC}"
    exit 0
}

# Set trap to cleanup on Ctrl+C
trap cleanup SIGINT SIGTERM

echo -e "${YELLOW}ğŸš€ Starting backend server...${NC}"
cd "$BASE_DIR/aira"
./target/release/aira_server &
BACKEND_PID=$!
echo -e "${GREEN}âœ“ Backend started (PID: $BACKEND_PID)${NC}"

# Wait for backend to be ready
echo -e "${YELLOW}â³ Waiting for backend to be ready...${NC}"
for i in {1..30}; do
    if curl -s http://127.0.0.1:3000/health > /dev/null 2>&1; then
        echo -e "${GREEN}âœ“ Backend is ready${NC}"
        break
    fi
    sleep 1
    if [ $i -eq 30 ]; then
        echo -e "${RED}âŒ Backend failed to start${NC}"
        exit 1
    fi
done

echo ""
echo -e "${YELLOW}ğŸš€ Starting frontend development server...${NC}"
cd "$BASE_DIR/aira/frontend"
npm run dev &
FRONTEND_PID=$!
echo -e "${GREEN}âœ“ Frontend started (PID: $FRONTEND_PID)${NC}"

# Wait for frontend to be ready
echo -e "${YELLOW}â³ Waiting for frontend to be ready...${NC}"
for i in {1..30}; do
    if curl -s http://localhost:5173 > /dev/null 2>&1; then
        echo -e "${GREEN}âœ“ Frontend is ready${NC}"
        break
    fi
    sleep 1
    if [ $i -eq 30 ]; then
        echo -e "${YELLOW}âš ï¸  Frontend may still be starting...${NC}"
    fi
done

echo ""
echo -e "${BLUE}ğŸ‰ Aira is running!${NC}"
echo "===================="
echo ""
echo -e "ğŸŒ Web UI: ${GREEN}http://localhost:5173${NC}"
echo -e "ğŸ”Œ API Server: ${GREEN}http://127.0.0.1:3000${NC}"
echo ""
echo -e "${YELLOW}Press Ctrl+C to stop${NC}"
echo ""

# Wait for both processes
wait
